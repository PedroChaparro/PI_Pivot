<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>CREATE AN ACCOUNT</title>
        <link rel="stylesheet" href="/styles/main.css" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500;700;900&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <div class="login-root">

            <div class="login">

                <%- include('_messages.ejs') %>

                <h1 class="login__title">SIGNUP</h1>

                <form method="post" action="/signup">
                    <label class="label--block" for="user_first_name">First Names</label>
                    <input class="input--fw" type="text" name="user_first_name" placeholder="Juan Carlos" />

                    <label class="label--block" for="user_last_name">Last Names</label>
                    <input class="input--fw" type="text" name="user_last_name" placeholder="Buenavida" />

                    <label class="label--block" for="user_identification_document">Identification Number</label>
                    <input
                        class="input--fw"
                        type="number"
                        name="user_identification_document"
                        placeholder="1 177 542 178"
                    />

                    <label class="label--block" for="user_email">Email</label>
                    <input class="input--fw" type="email" name="user_email" placeholder="juanbuenavida@domain.com" />

                    <label class="label--block" for="user_password">Password</label>
                    <input class="input--fw" type="password" name="user_password" placeholder="********" />

                    <input type="submit" value="ENVIAR" class="btn btn--primary btn--block btn--form" />

                    <p class="signup__redirect">Already has an account?, <a href="/login">login now</a></p>
                </form>
            </div>
        </div>
    
        <script src="/scripts/alerts.js"></script>
        <script src="https://kit.fontawesome.com/5023e2a492.js" crossorigin="anonymous"></script>

    </body>
</html>
